@model Task4.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["AuthLayout"] = true;
}

<section class="register-screen">
    <div class="register-layout shadow-sm">
        <aside class="register-art" aria-hidden="true"></aside>
        <div class="register-panel">
            <div class="register-content">
                <div class="register-brand">THE APP</div>
                <div class="register-surface">
                    <p class="register-kicker mb-1">Create your workspace profile</p>
                    <h1 class="register-title">Open Your Account</h1>
                    <p class="register-subtitle">You can sign in immediately after registration. E-mail confirmation is sent asynchronously.</p>

                    <form method="post" asp-controller="Account" asp-action="Register" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" asp-for="FirstName">First name</label>
                                <div class="input-group">
                                    <span class="input-group-text text-secondary"><i class="bi bi-person-fill" aria-hidden="true"></i></span>
                                    <input asp-for="FirstName" class="form-control" type="text" placeholder="Anna" autocomplete="given-name" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="LastName">Last name</label>
                                <div class="input-group">
                                    <span class="input-group-text text-secondary"><i class="bi bi-person-fill" aria-hidden="true"></i></span>
                                    <input asp-for="LastName" class="form-control" type="text" placeholder="Keller" autocomplete="family-name" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label" asp-for="Email">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text text-secondary"><i class="bi bi-envelope-fill" aria-hidden="true"></i></span>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="anna.keller@company.com" autocomplete="email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                <div class="form-text">Uniqueness is guaranteed by database unique index.</div>
                            </div>
                            <div class="col-12">
                                <label class="form-label" asp-for="Password"></label>
                                <div class="input-group">
                                    <span class="input-group-text text-secondary"><i class="bi bi-lock-fill" aria-hidden="true"></i></span>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Any non-empty password" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="d-grid mt-4">
                            <button class="btn btn-primary register-submit-btn" type="submit">Create Account</button>
                        </div>
                    </form>

                    <div class="mt-4 small d-flex justify-content-between align-items-center">
                        <span class="text-secondary">Already have an account?</span>
                        <a asp-controller="Account" asp-action="Login">Sign in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
