@{
    ViewData["Title"] = "Register mockup";
}

<section class="auth-page mx-auto" style="max-width: 560px;">
    <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <h1 class="h4 mb-3">Create account</h1>
            <p class="text-secondary">Пользователь регистрируется сразу, подтверждение e-mail отправляется асинхронно.</p>

            <form>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="firstName">First name</label>
                        <input id="firstName" class="form-control" type="text" placeholder="Anna" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="lastName">Last name</label>
                        <input id="lastName" class="form-control" type="text" placeholder="Keller" />
                    </div>
                    <div class="col-12">
                        <label class="form-label" for="registerEmail">Email</label>
                        <input id="registerEmail" class="form-control" type="email" placeholder="anna.keller@company.com" />
                        <div class="form-text">Уникальность e-mail гарантируется unique index в БД.</div>
                    </div>
                    <div class="col-12">
                        <label class="form-label" for="registerPassword">Password</label>
                        <input id="registerPassword" class="form-control" type="password" placeholder="Any non-empty password" />
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary" type="button">Register</button>
                </div>
            </form>

            <div class="mt-3 small d-flex justify-content-between">
                <a asp-controller="Mockups" asp-action="Login">Already have account?</a>
                <a asp-controller="Mockups" asp-action="RegistrationSuccess">Open success status</a>
            </div>
        </div>
    </div>
</section>
