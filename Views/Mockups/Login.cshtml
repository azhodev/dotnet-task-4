@{
    ViewData["Title"] = "Login mockup";
}

<section class="auth-page mx-auto" style="max-width: 480px;">
    <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <h1 class="h4 mb-3 text-center">Sign in</h1>
            <p class="text-center text-secondary mb-4">Доступ к панели управления пользователями</p>

            <div class="alert alert-info" role="status">
                Example status message: your account is unverified, but login is available.
            </div>

            <form>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input id="email" class="form-control" type="email" placeholder="name@company.com" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input id="password" class="form-control" type="password" placeholder="Enter password" />
                </div>
                <button class="btn btn-primary w-100" type="button">Login</button>
            </form>

            <div class="d-flex justify-content-between align-items-center mt-4 small">
                <a asp-controller="Mockups" asp-action="Register">Create account</a>
                <a asp-controller="Mockups" asp-action="UserManagement">Open admin table</a>
            </div>
        </div>
    </div>
</section>
