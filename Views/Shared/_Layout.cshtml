@{
    var isAuthLayout = ViewData["AuthLayout"] as bool? ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task4</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task4.styles.css" asp-append-version="true" />
</head>
<body class="@(isAuthLayout ? "auth-layout-body" : string.Empty)">
    @if (!isAuthLayout)
    {
        <header class="site-header">
            <nav class="navbar navbar-expand-sm site-navbar">
                <div class="container-xl">
                    <a class="navbar-brand site-brand" asp-area="" asp-controller="Users" asp-action="Index">
                        <span class="site-brand-mark" aria-hidden="true"></span>
                        <span>Task4</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                        <ul class="navbar-nav flex-grow-1 gap-sm-1">
                            <li class="nav-item">
                                <a class="nav-link site-nav-link" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="site-main-shell">
            <main role="main" class="container-xl site-main-content">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <main role="main" class="auth-layout-main">
            @RenderBody()
        </main>
    }

    @if (!isAuthLayout)
    {
        <footer class="site-footer">
            <div class="container-xl site-footer-inner">
                <span>&copy; 2026 Task4</span>
                <span class="text-secondary">User administration workspace</span>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
